@model Winery

<h2>Create</h2>

<form asp-action="Create" asp-controller="Wineries">
    @*All Data Will Go Back To The Controller - To The Create IActioResult - Set The Controller To Wineries*@

    <div class="form-horizontal">
        <h4>Winery</h4><hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 label control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-md-2 label control-label"></label>
            <select asp-for="Country" asp-items="@Html.GetEnumSelectList<Country>()" class="form-control"></select>
            <span asp-validation-for="Country" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default col-md-offset-2" />
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Wineries">Back To List</a>
    </div>
</form>